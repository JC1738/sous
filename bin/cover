#!/usr/bin/env bash
engulf -s --coverdir=/tmp/sous-cover --exclude='/vendor/,/integration/?,/bin/?,/dev_support/?,/util/test_with_docker/?,/examples/?,/util/cmdr/cmdr-example/?' --exclude-files='_generated.go$,raw_client.go$' --merge-base=_merged.txt ./...
